    "excerpt": {
      "type": "text"
    },
    "description": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "imageUrl": {
      "type": "string"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    }
