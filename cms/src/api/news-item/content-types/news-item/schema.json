{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news-item",
    "pluralName": "news-items",
    "displayName": "news-item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "publishDate": {
      "type": "date"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "News",
        "Press Release",
        "Blog",
        "Conference"
      ]
    },
    "summary": {
      "type": "text"
    },
    "heroImageUrl": {
      "type": "string"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ctaUrl": {
      "type": "string"
    },
    "body": {
      "type": "blocks"
    }
  }
}
